<div class="orbit no-margin-top" role="region" aria-label="banner" data-orbit>
  <div class="orbit-wrapper">
    <ul class="orbit-container">
      <li class="orbit-slide">
        <!-- <div class="row banner"> -->
        <!--   <div class="small&#45;12 medium&#45;12 small&#45;centered column text&#45;center"> -->
        <!--     <h1><%= t("layouts.header.open_city_title_html") %></h1> -->
        <!--   </div> -->
        <!-- </div> -->
        <div class="row register">
          <div class="small-5 medium-3 small-centered">
          </div>
        </div>

        <figure class="orbit-figure culture-covid">
          <%= link_to debate_path('1-prop-1'), class: "index #{"active" if controller_name == "proposals"}", accesskey: "d"  do %>
            <%= image_tag('fondo-cultura-y-covid.jpg', class: 'orbit-image hide-for-small-only', alt: 'Actividades participación ciudadana') %>
            <%= image_tag('fondo-cultura-y-covid-hover.jpg', class: 'orbit-image hide-for-small-only hover', alt: 'Actividades participación ciudadana') %>
            <%= image_tag('fondo-cultura-y-covid-movil.jpg', class: 'orbit-image show-for-small-only', alt: 'Actividades participación ciudadana') %>
            <% end %>
        </figure>
      </li>
    </ul>
    <nav class="orbit-bullets hide">
      <button class="is-active" data-slide="0"><span class="show-for-sr">First slide details.</span><span class="show-for-sr">Current Slide</span></button>
      <!--<button data-slide="2"><span class="show-for-sr">Second slide details.</span></button>-->
    </nav>
  </div>
</div>

