<div class="small-12 medium-9 column">
  <ul>
    <li>
      <%= link_to t("layouts.header.proposals"), proposals_path, class: "proposals #{"active" if  controller_name == "proposals"}", accesskey: "p" %>
    </li>
    <li>
      <%= link_to t("layouts.header.debates"), debates_path, class: "debates #{"active" if controller_name == "debates"}", accesskey: "d" %>
    </li>
    <li>
      <%= link_to t("layouts.header.city_council_debates"), nil, class: "city_council_debates #{"active" if controller_name == "city_council_debates"}", accesskey: "d" %>
    </li>
    <li>
      <%= link_to t("layouts.header.organizations"), nil, class: "organizations #{"active" if current_page?("/organizations")}", accesskey: "o"  %>
    </li>
    <li>
      <%= link_to t("layouts.header.volunteers"), nil, class: "volunteers #{"active" if current_page?("/volunteers")}", accesskey: "v"  %>
    </li>
  </ul>
</div>
<div class="small-12 medium-3 column social">
  <%= link_to root_path do %>
    <%= image_tag("facebook.svg") %>
  <% end %>
  <%= link_to root_path do %>
    <%= image_tag("twitter.svg") %>
  <% end %>
</div>
