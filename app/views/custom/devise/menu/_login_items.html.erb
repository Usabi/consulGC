<% if user_signed_in? %>
  <li>
    <%= link_to notifications_path, class: "notifications", accesskey: "n" do %>
      <span class="sr-only"><%= t("layouts.header.notifications") %></span>
      <% if current_user.notifications_count > 0 %>
        <span class="icon-circle" aria-hidden="true"></span>
        <span class="icon-notification" aria-hidden="true" title="<%= t('layouts.header.new_notifications', count: current_user.notifications_count).html_safe %>">
        </span>
      <% else %>
        <span class="icon-no-notification hide-for-small-only" aria-hidden="true" title="<%= t('layouts.header.no_notifications') %>"></span>
      <% end %>
      <%= t("layouts.header.notifications") %>
    <% end %>
  </li>
  <li>
    <%= link_to user_path(current_user), accesskey: "a" do %>
      <%= image_tag("Mi actividad.svg", class: "hide-for-small-only") %>
      <%= t("layouts.header.my_activity_link") %>
    <% end %>
  </li>
  <li>
    <%= link_to account_path, accesskey: "m" do %>
      <%= image_tag("Mi cuenta.svg", class: "hide-for-small-only") %>
      <%= t("layouts.header.my_account_link") %>
    <% end %>
  </li>
  <li>
    <%= link_to destroy_user_session_path, method: :delete do %>
      <%= image_tag("Salir.svg", class: "hide-for-small-only") %>
      <%= t("devise_views.menu.login_items.logout") %>
    <% end %>
  </li>
<% else %>
  <li>
    <%= link_to new_user_session_path do  %>
      <%= image_tag("Entrar.svg", class: "hide-for-small-only") %>
      <%= t("devise_views.menu.login_items.login") %>
    <% end %>
  </li>
  <li>
    <%= link_to new_user_registration_path do %>
      <%= image_tag("Registro.svg", class: "hide-for-small-only") %>
      <%= t("devise_views.menu.login_items.signup") %>
    <% end %>
  </li>
<% end %>
